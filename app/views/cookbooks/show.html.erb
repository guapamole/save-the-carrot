<div class="main-container mt-4">
    <div class="header-titre-subtitre">
      <div class = "titre-carrotte-frigo">
        <%= image_tag("logo.png", class: "petite-carrote") %>
        <h1 class="title-frigo">MES RECETTES</h1>
      </div>

      <div class="instruction">
        <p class="mb-3">Ici vos recettes favorites... cliquez pour voir les détails</p>
      </div>
    </div>


  <div class="container">
    <div class="row">

      <% @recipes.each do |recipe| %>

      <div class="col-12 col-sm-6 col-md-4">
        <div class="card_design">

          <div class="image-plat">
              <%# <%= image_tag(recipe.photo.attach, class: "plat-image") %> %>
          </div>

          <div class="content row ingredient-infos mx-0">
            <%= link_to recipe_path(recipe), style: 'color: inherit; text-decoration: none;' do %>
              <h2 class="recipe-link mb-0"><%= recipe.name %></h2>
            <% end %>

            <div class="difficulty">
              <% case recipe.difficulty %>
              <% when 1 %>
              <div class="div">
                <%= image_tag("star.png", class:"etoile") %>
              </div>

              <% when 2 %>
              <div class="div">
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
              </div>

              <% when 3 %>
              <div class="div">
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
              </div>

              <% when 4 %>
              <div class="div">
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
              </div>

              <% when 5 %>
              <div class="div">
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
                <%= image_tag("star.png", class:"etoile") %>
              </div>

              <% else %>
                <p>Dificulté inconnue</p>
              <% end %>
            </div>

            <h3 class="mb-0"><i class="fa-solid fa-clock"></i><%= recipe.preptime.hour unless recipe.preptime.nil?  %>
            minutes</h3>
          </div>

          <div class="destroy">
            <%= link_to "", recipe_path(recipe), data: {turbo_method: :delete, turbo_confirm: "Sur de vouloir supprimer cette recette ?"}, class:"fa-solid fa-trash-can poubelle" %>
          </div>

        </div>
      </div>
      <% end %>


    </div>
  </div>
</div>
