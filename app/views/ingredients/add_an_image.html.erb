
<div class="bg-content pt-4">
  <div class="header-titre-subtitre">
    <div class = "titre-carrotte-frigo">
      <%= image_tag("carrot-logo.png", class: "petite-carrote") %>
      <h1 class="title-frigo">AJOUTEZ VOTRE FRIGO</h1>
    </div>
  </div>
    <br>
  <div class=" pic-form flex- pe-0 mt-3 ps-0 mr-3">
    <%= form_with model: @ingredient, url: analyze_image_ingredients_path, method: :post, html: { multipart: true, class: 'pic-form' } do |form| %>

      <div class="download-picture pb-3">
        <%= form.label :photo, "Prenez votre frigo en photo !", class: "add-fridge" %>
      </div>

      <%= form.file_field :photo, accept: 'image/jpeg,image/jpg', class: "custom-file-field"%>

      <br>

      <div class="button-analyser">
        <%= form.submit "Scannez le frigo", class: "btn-patate-forme mt-4" %>
      </div>
    <% end %>
  </div>
</div>
