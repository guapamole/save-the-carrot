

<div class="main-container mt-4">
  <div class="header-titre-subtitre">
    <div class = "titre-carrotte-frigo">
      <%= image_tag("logo.png", class: "petite-carrote") %>
      <h1 class="title-frigo">RAJOUTER UN INGREDIENT</h1>
    </div>

    <div class="instruction">
      <p class="m-0"> Des nouveautés dans le frigo !</p>
    </div>


<div class="container pe-0 mt-3 ps-0">
  <div class="ingredient-form">
    <%= form_for @ingredient, url: ingredients_path do |f| %>
      <%= f.label :name, "Ingredient :", class: "name-label" %>
      <%= f.text_field :name, class: "ingredient-name", placeholder: "Ex: Kiri, carotte, etc." %>

      <%= f.label :quantity, "Quantité :", class: "quantity-label" %>
      <div class="quantity-controls">
        <button type="button" class="quantity-decrement-increment">
          -
        </button>
        <%= f.number_field :quantity, class: "ingredient-quantity" %>
        <button type="button" class="quantity-decrement-increment">
          +
        </button>
      </div>

      <%= f.label :purchase_date, "Date d'achat :", class: "date-label mt-0 ms-0" %>
      <br>
      <div class="date-controls">
      <%= f.date_field :purchase_date, class: "ingredient-date" %>
      </div>
</div>
<div class="submit-button mt-3">
  <%= f.submit "Ajouter l'ingrédient", class:"submit-button" %>
</div>
    <% end %>
  </div>
</div>
