
<% @recipes["recipes"].each do |recipe| %>
  <div class="card_design">
    <div class="row">
      <div class="col-3">
        <img class="img_layout" src="<%= recipe['img'] %>" alt="" width="256">

      </div>
    </div>
    <div class="row">
      <div class="col-9">
          <div class="title_row">
            <h3 class="title_layout"><%= recipe["name"] %></h3>
            <%#= link_to , class: "plus_button" do %>
              <img src="app/assets/images/icons/button-plus.png" alt="plus button">

            <%# end %>
        </div>
          <p class="time_difficulty_layout">
            <span class="time_layout">Time: <%= recipe["preptime"].to_i + recipe["cooking_time"].to_i %> min</span>
            <span class="difficulty_layout">Difficulty: <%= recipe["difficulty"] %></span>
            <%= link_to "enregistrer", recipes_path(@recipe, recipe), data: {turbo_method: :post} %>
        </p>


      </div>
    </div>
  </div>
<% end %>
