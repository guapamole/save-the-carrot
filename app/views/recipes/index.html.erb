
<div class="main-container mt-4">
  <div class = "titre-carrotte-frigo"> <%= image_tag("logo.png", class:"petite-carrote") %>
    <h1 class="title-frigo">IDEES DE RECETTES</h1>
  </div>

  <div class="instruction ms-4">
    <p> Quelque chose de très bon se prepare... </p>
  </div>

  <div class="container">
    <div class="row">
      <% @recipes["recipes"].each do |recipe| %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="card_design px-2">
            <div class="image-plat">
              <%= image_tag(recipe["img"], class: "plat-image") %>
            </div>

            <div class="content row ingredient-infos">
              <h3 class="title_layout" id="number-quantity2"><%= recipe["name"] %></h3>
              <p>Difficulté: <%= recipe["difficulty"] %></p>
              <p>Temps de préparation: <%= recipe["preptime"].to_i + recipe["cooking_time"].to_i %> minutes</p>
              <%= link_to "enregistrer", recipes_path(@recipe, recipe), data: {turbo_method: :post} %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
